pipeline{
    agent any
    stages{
        stage("books"){
            steps{
                echo "This books are not for sell"
                echo "we need to distribute them"
            }
        }
        stage("pens"){
            steps{
                echo "we have to give the pens to kid"
                echo "only kids from 5 years"
                input("Do you want to proceed?")
            }
        }
        stage("blue"){
            steps{
                echo " The pens should be blue"
                echo " Do not share black inks"
            }
        }
        stage("black"){
            steps{
                echo "for class five give black ink"
                echo "do not share blue inks"
            }
        }
        stage("Yellow"){
            steps{
                echo "this is the best colour"
            }
        }
        stage("orange"){
            steps{
                echo "the fruit is call orange"
            }
        }
        stage("mango"){
            steps{
                echo "the fruit is ready"
            }
        }
        stage("banana"){
            steps{
                echo "i love banana"
            }
        }
        stage("children"){
            steps{
                echo " my kids are doing great"
            }
        }
        stage("boys"){
            steps{
                echo "My kids are boys"
            }
        }

    }
}